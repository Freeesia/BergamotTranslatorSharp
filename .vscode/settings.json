{
    "terminal.integrated.defaultProfile.windows": "bergamot",
    "terminal.integrated.profiles.windows": {
        "bergamot": {
            "path": "cmd.exe",
            "args": ["/k", "${workspaceFolder}\\profile.bat"],
            "icon": "terminal-cmd"
        }
    },
    "dotnet.defaultSolution": "BergamotTranslatorSharp.sln",
    "[windows]:cmake.cmakePath": "${workspaceFolder}/cmake.bat",
    "[windows]:cmake.configureArgs": [
        "-DCMAKE_TOOLCHAIN_FILE=\"%VCPKG_ROOT%/scripts/buildsystems/vcpkg.cmake\"",
        "-DUSE_STATIC_LIBS=ON",
        "-DVCPKG_TARGET_TRIPLET=\"x64-windows-static\""
    ],
}