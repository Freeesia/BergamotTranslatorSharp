{
    "terminal.integrated.defaultProfile.windows": "bergamot",
    "terminal.integrated.profiles.windows": {
        "bergamot": {
            "path": "cmd.exe",
            "args": ["/k", "${workspaceFolder}\\profile.bat"],
            "icon": "terminal-cmd"
        }
    },
    "dotnet.defaultSolution": "BergamotTranslatorSharp.sln",
    "files.associations": {
        ".sentryclirc": "ini",
        "optional": "cpp",
        "memory": "cpp"
    },
    "cmake.cmakePath": "${workspaceFolder}/cmake.bat",
    "cmake.configureArgs": [
        "-DCMAKE_TOOLCHAIN_FILE=\"%VCPKG_ROOT%/scripts/buildsystems/vcpkg.cmake\""
    ],
}